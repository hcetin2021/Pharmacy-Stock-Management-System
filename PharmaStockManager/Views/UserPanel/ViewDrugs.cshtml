@model IEnumerable<PharmaStockManager.Models.Drug>

@{
    ViewData["Title"] = "View Drugs";
}

<h2>All Available Drugs</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Unit Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var drug in Model)
        {
            <tr>
                <td>@drug.Name</td>
                <td>@drug.Category</td>
                <td>@drug.Quantity</td>
                <td>@drug.UnitPrice</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-primary" asp-controller="UserPanel" asp-action="Index">Back to User Panel</a>
</div>
